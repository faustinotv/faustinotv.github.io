						[
								[
									Player.HasMedia + Player.HasVideo + !Player.HasAudio
									+ String.IsEmpty(Window(home).Property(PlayBackJustStarted)) 
									+ String.IsEmpty(Window(home).Property(PlayBackJustEnded))
								]
							| 
								[
								Player.HasMedia + !Player.HasVideo + Player.HasAudio
								]
						]
						

						
						
						
						+ [Player.HasMedia + [Player.HasVideo | Player.HasAudio]]
						
						+ [Player.ShowInfo | Window.IsActive(VideoOSD) | Window.IsActive(MusicOSD) | Player.Seeking | Player.DisplayAfterSeek | Player.HasPerformedSeek(2) | [Player.Paused + !Skin.HasSetting(NoInfoOsdOnPause) + Player.HasVideo] | [Player.Paused + [!Player.HasVideo + Player.HasAudio]] | [Player.Paused + Skin.HasSetting(NoInfoOsdOnPause) + !Window.IsVisible(FullScreenVideo) + !Window.IsVisible(VideoOSD)] | Player.Forwarding | Player.Rewinding | Player.ShowTime | Player.IsTempo] 
						
						+ !Window.IsActive(MovieInformation)</visible>

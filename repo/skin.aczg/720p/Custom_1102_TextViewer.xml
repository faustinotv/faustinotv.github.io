<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1102">
	<defaultcontrol always="true">3000</defaultcontrol>
	
	<include>dialogeffect</include>
	
	<onload>AlarmClock(TextViewerFocus,SetFocus(3000),00:00:01,silent)</onload>
	<onunload>CancelAlarm(TextViewerFocus,silent)</onunload>
	
	<onunload condition="Window.IsVisible(tvrecordings) + [Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo)]">SetFocus(8)</onunload>
	<onunload condition="!Window.IsVisible(tvrecordings) + [Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo)]">SetFocus(888)</onunload>
	
	<onunload condition="Window.IsVisible(movieinformation) + String.IsEmpty(Window(home).Property(OSDinfodialogButtonActive))">SetFocus(8)</onunload>
	<onunload condition="Window.IsVisible(movieinformation) + !String.IsEmpty(Window(home).Property(OSDinfodialogButtonActive))">SetFocus(888)</onunload>
	
	<controls>
		<control type="group">
			<include>BehindDialogBlackBackground</include>
		</control>
		<control type="group">
			<left>185</left>
			<top>40</top>
			<control type="group">
				<left>0</left>
				<top>0</top>
				<include content="DialogBackgroundCommonsNoBackground">
					<param name="DialogBackgroundWidth" value="920" />
					<param name="DialogBackgroundHeight" value="639" />
					<param name="DialogHeaderWidth" value="908" />
					<param name="DialogHeaderLabel" value="$INFO[Window(home).Property(TextViewer_Header)]" />
					<param name="DialogHeaderId" value="2" />
					<param name="CloseButtonLeft" value="853" />
					<param name="CloseButtonNav" value="3000" />
					<param name="WorkaroundRemoveHeader" value="666" />
				</include>
			</control>
			<control type="textbox" id="2000">
				<left>30</left>
				<top>76</top>
				<width>836</width>
				<height>524</height>
				<pagecontrol>3000</pagecontrol>
				<font>Light20+</font><!-- Regular20+ test light -->
				<label>$INFO[Window(home).Property(TextViewer_Text_Pre),,[CR]]$INFO[Window(home).Property(TextViewer_Text)]</label>
			</control>
			<control type="scrollbar" id="3000">
				<left>900</left>
				<top>76</top>
				<width>20</width>
				<height>530</height>
				<texturesliderbackground border="10">scrollbars/ScrollBarUni-bg.png</texturesliderbackground>
				<texturesliderbar border="10">scrollbars/ScrollBarUni-bar.png</texturesliderbar>
				<texturesliderbarfocus border="10">scrollbars/ScrollBarUni-bar-focus.png</texturesliderbarfocus>
